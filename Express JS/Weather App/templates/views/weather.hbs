<!DOCTYPE html>
<html lang="en">

<head>
  {{>head}}
  <title>Weather App</title>
</head>

<body>
  {{>navbar}}
  <!-- Main Page Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto main_content">

        <div>
          <form class="temp_form">
            <input type="search" id="cityname" autocomplete="off" placeholder="Enter your city name">
            <input type="submit" value="Search" id="submitBtn">
          </form>
        </div>
        <div class="tempInformation">
          <div class="top_layer">
            <p id="day">

            </p>
            <p id="today_date">13 OCT</p>
          </div>
          <div class="main_layer">
            <p id="city_name">Get Output</p>
            <div class="middle_layer data_hide">
              <p id="temp"> <span id="tempValue">0</span> <sup>o</sup>C</p>
              <p id="temp_status">
                <i class="fa fa-cloud"></i>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{>footer}}
  <script src="js/main.js"></script>
</body>

</html>